# ================================================
# Manzana Mordida - Docker Compose Configuration
# ================================================
# Copy this file to .env and update the values

# MongoDB Configuration
MONGODB_USER=your_mongodb_user
MONGODB_PASSWORD=your_mongodb_password
MONGODB_HOST=host.docker.internal
MONGODB_PORT=27017
MONGODB_AUTH_SOURCE=admin

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=15m

# Application Configuration
NODE_ENV=production

# Cloudflare R2 Configuration
# Get these values from your Cloudflare R2 dashboard
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=your-bucket-name
R2_PUBLIC_URL=https://your-public-url.r2.dev

# ================================================
# Note: The following variables are NOT in .env
# They remain hardcoded in docker-compose.yml:
# ================================================
# - PORT (each service has its own port)
# - REFRESH_TOKEN_EXPIRY_DAYS (msSeguridad only) = 7
# - REFRESH_TOKEN_BYTES (msSeguridad only) = 64
# - COOKIE_SECURE (msSeguridad only) = false
# - PORCENTAJE_RESERVA (msReservas only) = 0.2
# - VIGENCIA_RESERVA (msReservas only) = 7
